<!doctype html>
<html>
<head>
    <title>Inventory List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
</div>
<h2>Welcome!</h2>
  <h1>Personal Inventory List</h1>


  <h3>Inventory</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) { %>
    <li class="message">
      <span>Product Name: </span><span class="name"><%= messages[i].name %></span><br>
      <span>Category: </span><span class="cat"><%= messages[i].cat %></span><br>
      <span>Qty: </span><span class="plus"><%= messages[i].plus %></span>
      <span><i class="fa fa-plus-circle" aria-hidden="true"></i></span>
      <span><i class="fa fa-minus-circle" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>

      <input class="newQty" type="number" placeholder="Qty" name="qty">
      <button class="update">Update Qty</button>

    </li>
  <% } %>
  </ul>

  <h2>Add an Item</h2>

  <form action="/inventory" method="POST">
    <input type="text" placeholder="Product Name" name="name">
    <input type="text" placeholder="Category" name="cat">
    <button type="submit">Submit</button>
  </form>
<script src="main.js"></script>

</body>
</html>
