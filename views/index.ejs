<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory List</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h2>Welcome!</h2>
  <h1>Personal Inventory List</h1>


  <h3>Inventory</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) { %>
    <li class="message">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].cat %></span>
      <span><%= messages[i].plus %></span>
      <span><i class="fa fa-plus-circle" aria-hidden="true"></i></span>
      <span><i class="fa fa-minus-circle" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Add an Item</h2>

  <form action="/inventory" method="POST">
    <input type="text" placeholder="Product Name" name="name">
    <input type="text" placeholder="Category" name="cat">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
